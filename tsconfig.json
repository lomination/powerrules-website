{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/*.svelte"],
  "exclude": ["node_modules"]
}
